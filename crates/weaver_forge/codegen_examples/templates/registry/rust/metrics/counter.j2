pub fn create_u64_{{ metric.metric_name | snake_case }}(meter: &opentelemetry::metrics::Meter) -> opentelemetry::metrics::Counter<u64> {
    meter.u64_counter("{{ metric.metric_name }}")
        .with_description("{{ metric.brief }}")
        .with_unit(opentelemetry::metrics::Unit::new("{{ metric.unit }}"))
        .init()
}

