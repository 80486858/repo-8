{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es2017",
    "strict": false,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@nimbella/storage/*": ["src/*"]
    }
  },
  "exclude": ["src/**/*.spec.ts", "src/**/*.test.ts", "node_modules"],
  "include": ["src/**/*"]
}
